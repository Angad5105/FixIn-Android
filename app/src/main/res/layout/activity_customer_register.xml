<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_gravity="center"
    tools:context=".Register">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="211dp"
        android:layout_height="171dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logofix" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/Customer_editText"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="First Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/Customer_editText2"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Last Name"
            android:inputType="textPersonName" />
    </LinearLayout>

    <EditText
        android:id="@+id/Customer_editText3"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="+1 111-111-1111"
        android:inputType="phone" />

    <EditText
        android:id="@+id/Customer_editText4"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/Customer_editText5"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/Customer_button"
        android:layout_width="394dp"
        android:layout_height="187dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="Create Profile"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="40sp"
        android:textStyle="bold" />


</LinearLayout>